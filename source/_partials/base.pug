        block content

        //- Stylesheets
        block styles
            //- Libraries
            link(href="//fonts.googleapis.com/css?family=Open+Sans:300,400", rel="stylesheet", type="text/css")

            //- Custom
            link(rel="stylesheet", type="text/css", href=root+"assets/css/styles.css?RANDOMIZE-ME")

        //- Scripts
        block scripts
