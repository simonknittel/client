block variables

//- Make sure to set the root variables on pages in a subdirectory
- if (typeof(root) === 'undefined') {
    - var root = './'
- }

//- Mixin for svg stacks
mixin icon(name)
    svg(viewbox="0 0 100 100").icon
        use(xlink:href="/assets/img/icons.svg#"+name)

doctype html
html(lang="en", class=htmlClass)
    head
        meta(charset="utf-8")
        meta(name="robots", content=root+"robots.txt")
        //- meta(http-equiv="X-UA-Compatible", content="IE-edge, chrome=1") //- See .htaccess
        meta(name="viewport", content="width=device-width, initial-scale=1, minimum-scale=1")

        title #{title}
        meta(name="description", content=description)
        meta(name="keywords", content=keywords)
        meta(name="author", content="Simon Knittel <hallo@simonknittel.de> (https://simonknittel.de)")

        //- Favicon
